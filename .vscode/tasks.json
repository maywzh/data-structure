{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make-all",
      "command": "make",
      "type": "process",
      "args": [
        "-i"
      ],
      "problemMatcher": "$gcc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "make clean-all",
      "command": "make",
      "type": "process",
      "args": [
        "clean",
        "-i"
      ],
      "problemMatcher": "$gcc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true
      }
    },
    {
      "label": "make-stack",
      "options": {
        "cwd": "src/stack"
      },
      "command": "make",
      "type": "shell",
      "args": [],
      "problemMatcher": "$gcc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "make-tree",
      "options": {
        "cwd": "src/tree"
      },
      "command": "make",
      "type": "shell",
      "args": [],
      "problemMatcher": "$gcc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "make-sort",
      "options": {
        "cwd": "src/sort"
      },
      "command": "make",
      "type": "shell",
      "args": [],
      "problemMatcher": "$gcc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "cxx-tree",
      "command": "gcc",
      "type": "shell",
      "args": [
        "src/tree/*.cxx",
        "-std=c11",
        "-g",
        "-o",
        "src/tree/main"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "cxx-stack",
      "command": "g++",
      "type": "shell",
      "args": [
        "src/stack/main.cxx",
        "src/stack/listack.cxx",
        "src/stack/sqstack.cxx",
        "-std=c++17",
        "-g",
        "-o",
        "src/stack/main"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
