  "version": "2.0.0",
  "tasks": [
    {
      "label": "make",
      "options": { "cwd": "src/stack" },
      "command": "make",
      "type": "shell",
      "args": [],
      "problemMatcher": "$gcc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "c",
      "command": "gcc",
      "type": "shell",
      "args": [
        "src/tree/main.c",
        "src/tree/tree.c",
        "-std=c11",
        "-g",
        "-o",
        "src/tree/main"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "cxx-stack",
      "command": "g++",
      "type": "shell",
      "args": [
        "src/stack/main.cxx",
        "src/stack/listack.cxx",
        "src/stack/sqstack.cxx",
        "-std=c++17",
        "-g",
        "-o",
        "src/stack/main"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
